<%- include elements/loginheader.ejs %> 
<div class="auth-layout-wrap" style="background: #eee;">
    <div class="auth-content" style="min-width: 360px; width:360px">
        <div class="card o-hidden">
            <form method="post" action="/api/admin/new_password">
                <div class="row">
                    <div class="col-md-12">
                        <div class="p-4">
                            <h1 class="mb-3 text-18">New Password</h1>
                             
                            <%- include elements/flash.ejs %>
                           
                            <input type="hidden" name="token" value="<%=token%>">
                            <input type="hidden" name="email" value="<%=email%>">
                            
                            <div class="form-group">
                                <label for="password">Password<span class="astric">*</span></label>
                                <input type="password" name="password" id="password" class="form-control" placeholder="Password" value="<%=data.password%>"/>
                                <span class="error"><%=errorData.password%></span>
                                <div id="strongy" class="mt-4"></div>
                            </div>

                            <div class="form-group">
                                <label for="password">Confirm Password<span class="astric">*</span></label>
                                <input type="password" name="cpassword" class="form-control" placeholder="Confirm Password" value="<%=data.cpassword%>"/>
                                <span class="error"><%=errorData.cpassword%></span>
                            </div>
                            
                            <button type="submit" class="btn btn-primary btn-block mt-4">Change Password</button>

                        </div>
                    </div>
                </div>
            <form>
        </div>
    </div>
</div>

<%- include elements/loginfooter.ejs %> 

